		NIC_FW_GI_PATH=${NIC_FW_GI_PATH:-"/usr/lib/firmware/mellanox/bmc"}
		DPU_GI_PATH=${DPU_GI_PATH:-"/usr/lib/firmware/mellanox/bmc"}
		BMC_PATH=${BMC_PATH:-"/usr/lib/firmware/mellanox/bmc"}
		CEC_PATH=${CEC_PATH:-"/usr/lib/firmware/mellanox/cec"}
	fi
elif (lspci -n -d 15b3: | grep -wq 'a2d6'); then
	bmc_pref="bf2"
	# BF2 does not support Golden Images
	UPDATE_DPU_GOLDEN_IMAGE="no"
